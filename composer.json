    "type": "library",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.x-dev",
        "wp-cli/wp-cli-tests": "^3.1",
        "vlucas/phpdotenv": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Windel Oira",
            "email": "windeloira07@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "behat": "run-behat-tests",
        "behat-rerun": "rerun-behat-tests",
