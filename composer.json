{
    "name": "windel07/wp-scaffold",
    "type": "project",
    "description": "A basic scaffold for WP projects.",
    "homepage": "https://github.com/windel07/wp-scaffold",
    "require": {
        "php": ">=5.6",
        "wp-cli/wp-cli": "2.7.*",
        "vlucas/phpdotenv": "5.4.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Windel Oira",
            "email": "windeloira07@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"file_exists('project/wp-config.php') || copy('wp-config-template.php', 'wp-config.php');\""
        ],
        "post-install-cmd": [
            "chmod +x installer/install.sh"
        ]
    }
}
